<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserNotification">

    <TextView
            android:text="TextView"
            android:layout_width="249dp"
            android:layout_height="212dp"
            android:id="@+id/txtResult"
            android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/btnConfirmar" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtMensagem"
            app:layout_constraintVertical_bias="0.098"/>
    <Button
            android:text="Confirmar"
            android:layout_width="114dp"
            android:layout_height="38dp"
            android:id="@+id/btnConfirmar" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp" android:textAlignment="center"/>
    <Button
            android:text="Cancelar"
            android:layout_width="110dp"
            android:layout_height="38dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btnCancelar" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/btnConfirmar"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.478"
            android:textAlignment="center"/>
    <TextView
            android:text="NomeLoja"
            android:layout_width="241dp"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:id="@+id/txtStoreName"
            android:textSize="24sp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.349"/>
    <View
            android:id="@+id/divider"
            android:layout_width="304dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txtStoreName"/>
    <TextView
            android:text="Selecione a baixo as informações a serem compartilhadas com o website"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtMensagem" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/divider"/>
</android.support.constraint.ConstraintLayout>