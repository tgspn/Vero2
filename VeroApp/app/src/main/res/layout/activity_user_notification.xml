<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserNotification">

    <Button
            android:text="Confirmar"
            android:layout_width="136dp"
            android:layout_height="58dp"
            android:id="@+id/btnConfirmar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
            android:background="@color/colorPrimary" android:textColor="@color/colorPrimary"
            android:layout_marginBottom="28dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Cancelar"
            android:layout_width="126dp"
            android:layout_height="56dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btnCancelar"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" android:background="@color/colorAccent"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
            android:layout_marginEnd="8dp" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="NomeLoja"
            android:layout_width="241dp"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:id="@+id/txtStoreName"
            android:textSize="24sp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <View
            android:id="@+id/divider"
            android:layout_width="304dp"
            android:layout_height="4dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/txtValor"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Selecione a baixo as informações a serem compartilhadas com o website"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtMensagem" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/divider" app:layout_constraintHorizontal_bias="0.133"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="303dp"
            android:layout_height="267dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtMensagem"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/lvFields"
            tools:listitem="@layout/content_fields_item" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnConfirmar" app:layout_constraintVertical_bias="0.037"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Valor"
            android:layout_width="33dp"
            android:layout_height="19dp"
            android:id="@+id/txtValor" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtStoreName"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            android:textColor="@color/zxing_viewfinder_laser" android:layout_marginStart="4dp"/>
    <TextView
            android:text="Valor da compra: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtStoreName" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>