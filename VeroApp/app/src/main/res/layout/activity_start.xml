<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".StartActivity">
    <Button
            android:text="Criar Carteira"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="92dp"
            android:id="@+id/btnCreateWallet"
            android:layout_marginTop="172dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Importar Carteira"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="52dp"
            android:id="@+id/btnExportWallet"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="invisible"/>
    <TextView
            android:text="Esta opção irá criar uma nova carteira"
            android:layout_width="234dp"
            android:layout_height="40dp"
            android:id="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCreateWallet"/>
</android.support.constraint.ConstraintLayout>